- @order.order_items.each do |order_item|
  .general-cart-item.divider-lg
    .general-img-wrap-table
      %img.cart-img-shadow{src: order_item.book.cover_url, alt: 'Some cool Book'}
    %p.title= order_item.book.title
    %P.in-grey-600.fw-300= product_first_sentence(order_item.book)
    %table.table
      %tr
        %td
          %span.in-grey-600 Price
        %td
          %span.font-16.in-gold-500= number_to_euro(order_item.book.price)
      %tr
        %td.vertical-middle
          %span.in-grey-600 Quantity
        %td
          %span= order_item.quantity
      %tr
        %td
          %span.in-grey-600 SubTotal
        %td
          %span.font-16.in-gold-500= order_item.subtotal_price