%main.container.general-main-wrap
  %h1.mt-0.mb-25 My Orders
  %p.lead.small.mb-10.visible-xs Sort by
  .dropdowns.dropdown.general-order-dropdown
    %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      Waiting for processing
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    %ul.dropdown-menu
      %li
        = link_to 'All', orders_path
      %li
        = link_to 'Waiting for processing', orders_path(status: 'Waiting for Processing')
      %li
        = link_to 'In Progress', orders_path(status: 'In Progress')
      %li
        = link_to 'In Delivery', orders_path(status: 'In Delivery')
      %li
        = link_to 'Delivered', orders_path(status: 'Delivered')
  .visible-xs
    = render 'visible_xs_orders'
  .hidden-xs.mb-res-50
    = render 'hidden_xs_orders'