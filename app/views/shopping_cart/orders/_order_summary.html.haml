%p.in-gold-500.font-18 Order Summary
%table.general-summary-table.general-summary-table-right.general-text-right
  %tr
    %td
      %p.font-16 Item Total:
    %td
      %p.font-16= number_to_euro(@order.order_items_total)
    - if @order.discount
      %tr
        %td
          %p.font-16 Coupon:
        %td
          %p.font-16= number_to_euro(@order.discount)
    %tr
      %td
        %p.font-16 Shipping:
      %td
        %p.font-16= number_to_euro(@order.delivery.price)
    %tr
      %td
        %p.font-16 Order Total:
      %td
        %p.font-16= number_to_euro(@order.order_total_with_delivery)