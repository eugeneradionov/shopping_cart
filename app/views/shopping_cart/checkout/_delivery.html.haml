%h1.general-title-margin Checkout
%ul.steps.list-inline
  %li.step.done
    %span.step-number
      %i.fa.fa-check.step-icon
    %span.step-text.hidden-xs Address
  %li.step-divider
  %li.step.active
    %span.step-number 2
    %span.step-text.hidden-xs Delivery
  %li.step-divider
  %li.step
    %span.step-number 3
    %span.step-text.hidden-xs Payment
  %li.step-divider
  %li.step
    %span.step-number 4
    %span.step-text.hidden-xs Confirm
  %li.step-divider
  %li.step
    %span.step-number 5
    %span.step-text.hidden-xs Complete
%h3.general-subtitle Delivery
.visible-xs
  - ShoppingCart::Delivery.all.each do |delivery|
    .general-cart-item.divider-lg-bottom.mb-30
      %table.table
        %tr
          %td.col-half
            %span.in-grey-600 Method
          %td.col-half
            .form-group.radio.mt-0.mb-0
              %label.radio-label
                = f.radio_button :delivery_method, delivery.id, class: 'radio-input', hidden: true
                %span.radio-icon
                %span.radio-text= delivery.method
        %tr
          %td
            %span.in-grey-600 Days
          %td
            %span.font-16.fw-300= delivery_days(delivery)
        %tr
          %td
            %span.in-grey-600 Price
          %td
            %span.font-16.in-gold-500= delivery_price(delivery)
.hidden-xs.mb-res-50
  %table.table.table-hover
    %thead
      %tr
        %th.col-method
          %span.in-grey-600.ml-40 Method
        %th
          %span.in-grey-600 Days
        %th
          %span.in-grey-600 Price
    %tbody
      - ShoppingCart::Delivery.all.each do |delivery|
        %tr
          %td
            .form-group.radio.mt-0.mb-0
              %label.radio-label
                = f.radio_button :delivery_method, delivery.id, class: 'radio-input', hidden: true
                %span.radio-icon
                %span.radio-text= delivery.method
          %td
            %span= delivery_days(delivery)
          %td
            %span.font-16.in-gold-500= delivery_price(delivery)
.general-text-align
  = render 'order_summary'